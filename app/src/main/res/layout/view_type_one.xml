<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/card_one"
        >
        <ImageView
            android:layout_width="380dp"
            android:layout_height="170dp"
            android:id="@+id/image_one"
            android:src="@drawable/image2"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rate"
            android:src="@drawable/ic_star_yellow_24dp"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_rate"
            android:text="4.5(21 ratings)"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="50dp"
            android:textColor="#FFFFFF"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/btn_day"
            android:backgroundTint="#950E83"
            android:text="$99/day"
            android:textColor="#FFFFFF"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="270dp"
            android:background="@drawable/mybutton"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name"
        android:text="The Westeen"
        android:textSize="20dp"
        android:layout_below="@+id/card_one"
        android:textColor="#0D0C0D"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_location"
        android:text="Gulshan Circle 2. Dhaka"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_percentage"
        android:text="GET 50% OFF"
        android:textColor="#F22F83"
        android:textSize="10sp"
        android:layout_marginLeft="330dp"
        android:layout_below="@+id/card_one"
        android:layout_marginTop="12dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_free"
        android:text="Free with * Swimming"
        android:layout_below="@+id/tv_percentage"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="5dp"/>
</RelativeLayout>